{
  "name": "@leicht.io/ui",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build:production:dist": "rimraf ./dist && tsc",
    "build:production:examples": "parcel build ./examples/index.html --out-dir ./examples/dist",
    "run:development": "parcel ./examples/index.html --out-dir ./examples/dist",
    "build": "npm run lint && npm run build:production:dist && npm run build:production:examples",
    "deploy": "npm run build:all && npm publish",
    "lint": "npm run lint:scss && npm run lint:ts && npm run lint:ts:demo",
    "lint:ts": "tsc --noEmit && npx tslint './src/**/*.{ts,tsx}'",
    "lint:ts:demo": "tsc --noEmit && npx tslint './examples/**/*.{ts,tsx}'",
    "lint:scss": "node ./node_modules/stylelint/bin/stylelint.js \"./src/**/*.scss\" --cache --cache-location \".stylelintcache\""
  },
  "files": [
    "/src",
    "/dist",
    "/examples",
    "/package.json",
    "/package-lock.json",
    "/README.md"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leicht-io/ui.git"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "author": "Christian Leicht",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leicht-io/ui/issues"
  },
  "homepage": "https://github.com/leicht-io/ui#readme",
  "dependencies": {
    "react": ">=15",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "parcel": "^1.12.4",
    "rimraf": "^3.0.2",
    "sass": "^1.26.3",
    "stylelint": "^13.2.1",
    "tslint": "^6.1.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^4.2.0",
    "tslint-react-hooks": "^2.2.2",
    "typescript": "^3.8.3"
  }
}
